@model AnimalShelter.Models.Animal

@{
    ViewData["Title"] = "Create";

    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
            {
                Text = "Dog",
                Value = "1"
            }

    );
    listItems.Add(new SelectListItem
            {
                Text = "Cat",
                Value = "0"
            }
    );
}

<style >
    h1{
        color: black;
    }
</style>



<h1>Add new animal</h1>


<hr />

<div class="row">
    <div class="col-md-4" style="color:black">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Name" class="control-label"></label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fa-solid fa-dog"></i>
                    <i class="fa-solid fa-cat"></i>
                    </span>
                <input asp-for="Name" class="form-control" />
            </div>
                <span asp-validation-for="Name" class="text-danger"></span>

            <br />

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-caret-down"></i></span>
                    @Html.DropDownListFor(model => model.Type,listItems,"-- Select an animal --",new {style="width:250px",type="number"})
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <br />
                <label>Male</label>
                <input type="radio" asp-for="Sex" value="Male"  />
                <label>Female</label>
                <input type="radio" asp-for="Sex" value="Female"  />
                <br/>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Breed" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-paw"></i></span>
                    <input asp-for="Breed" class="form-control" />
                </div>
                <span asp-validation-for="Breed" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-cake-candles"></i></span>
                    <input asp-for="Birthday" class="form-control" />
                </div>
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Microchip" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-microchip"></i></span>
                    <input asp-for="Microchip" class="form-control" />
                </div>
                <span asp-validation-for="Microchip" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-image"></i></span>
                    <input asp-for="Image"  class="form-control"/>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-comment"></i></span>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


 




            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
