@model AnimalShelter.Models.Animal

@{
    ViewData["Title"] = "Details";
}

<style>
    h1{
        margin-left:20px;
        color:palegoldenrod
    }

    .card{
        line-height:4rem;
        color:white;
        background-color: #ff6200;
        margin-right:10px;
        height:fit-content;
        padding-right:1rem;
    }
</style>


<h1>@Html.DisplayFor(model => model.Name)</h1>
<div class="row">
    <div class="container" style="height:600px; width:800px;">
       
            <img src="@Model.Image"/>
        
    </div>

    <br />

    <div class="card w-25">
        <ul>
            <li>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model =>model.Name)</li>
            <li>@Html.DisplayNameFor(model => model.Sex): @Html.DisplayFor(model =>model.Sex)</li>
            <li>@Html.DisplayNameFor(model => model.Birthday): @Html.DisplayFor(model =>model.Birthday)</li>
            <li>@Html.DisplayNameFor(model => model.Microchip): @Html.DisplayFor(model =>model.Microchip)</li>
            <li style="line-height:2rem;">@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model =>model.Description)</li>

        </ul>
    </div>
</div>


















